<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>

    <style>
        .category {
            padding: 40px;
        }

        .add__cars {
            display: flex;
            justify-content: flex-end;
            padding: 5px;
        }

        .add__entity {
            font-size: 30px;
        }

        .card {
            position: relative;
            overflow: hidden;
        }

        .change__btn {
            width: 100%;
            position: absolute;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .cars__card {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .cars__card .card {
            margin-bottom: 20px;
        }
    </style>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
    <nav class="navbar bg-dark  navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid ">
            <a class="navbar-brand text-light text-white" href="./">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-light text-white">
                    <li class="nav-item ">
                        <a class="nav-link active text-light text-white" aria-current="page" href="./pharmacyAdd">Pharmacy add</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/tabletsAdd">Tablets add</a>
                    </li>
                    <li class="nav-item dropdown">
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item text-light" href="#">Action</a></li>
                            <li><a class="dropdown-item text-light" href="#">Another action</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="category">
        <div>
            <div class="add__cars">
                <button style="padding: 0; padding-left: 10px; padding-right: 10px;" type="button"
                    class="add__cars-btn btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    <span class="add__entity">&#x2B;</span>
                </button>
            </div>

            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/tabletsAdd" method="post">
                                <div class="mb-3">
                                    <label for="title" class="form-label">Pharmacy title</label>

                                    <input name="name" type="text" class="form-control" id="title" required>
                                </div>
                                <div class="mb-3">
                                    <label for="address" class="form-label">Pharmacy </label>

                                    <input name="price" type="text" class="form-control" id="price" required >
                                </div>
                                <div class="mb-3">
                                    <label for="color" class="form-label">Img link</label>

                                    <input name="desc" type="text" class="form-control" id="desc">
                                </div>
                                <div class="mb-3">
                                    <select required class="form-select" name="pharmacyId" id="pharmacyId">
                                        <% for (const e of pharmacy) {  %>
                                            <option value=<%= e.id %> ><%= e.name %> </option>
                                        <% } %>
                                    </select>
                                </div>

                                <button style="display: flex; justify-content:flex-end;" class="btn btn-success"
                                    type="submit">Add</button>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="cars__card">
            <% tablets?.map(e => {%>
                <div class="card" style="width: 16rem;">
                    <div class="card-body">
                        <h2><%= e.name %> </h2>
                        <p>Narxi: <%= e.price %> </p>
                        <p><%= e.desc %> </p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <script>
        var myModal = document.getElementById('myModal')
        var myInput = document.getElementById('myInput')

        myModal.addEventListener('shown.bs.modal', function () {
            myInput.focus()
        })
    </script>

</body>
</html>